@using BlazorPro.BlazorSize

<h5>Device Size</h5>
<ul class="list-group">
    <li class="list-group-item @Active(IsLarge)">Large</li>
    <li class="list-group-item @Active(IsMedium)">Medium</li>
    <li class="list-group-item @Active(IsSmall)">Small</li>
</ul>
<MediaQueryList>
    <MediaQuery Media="@Bootstrap.Breakpoints.min_width_992px" @bind-Matches="IsLarge" />
    @{
        <MediaQuery Media="@bpOnlyMedium" @bind-Matches="IsMedium" />
    }
    <MediaQuery Media="@Bootstrap.Breakpoints.max_width_575_98px" @bind-Matches="IsSmall" />
</MediaQueryList>

@code {
    Func<bool, string> Active = state => state ? "active" : "";
    string bpOnlyMedium = Bootstrap.Breakpoints.min_width_768px + " and " + Bootstrap.Breakpoints.max_width_991_98px;
    bool IsLarge = false;
    bool IsMedium = false;
    bool IsSmall = false;
}